+ 		DRM_DEBUG_DRIVER("SWSCI request error %u\n", scic);
+ 		return -EIO;
+ 	}
+ 
+ 	if (parm_out)
+ 		*parm_out = ioread32(&swsci->parm);
+ 
+ 	return 0;
+ 
