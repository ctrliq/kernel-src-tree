+ static int copy_file_from_fd(int fd, void **buf, unsigned long *buf_len)
+ {
+ 	struct fd f = fdget(fd);
+ 	int ret;
+ 	struct kstat stat;
+ 	loff_t pos;
+ 	ssize_t bytes = 0;
+ 
+ 	if (!f.file)
+ 		return -EBADF;
+ 
+ 	ret = vfs_getattr(&f.file->f_path, &stat);
+ 	if (ret)
+ 		goto out;
+ 
+ 	if (stat.size > INT_MAX) {
+ 		ret = -EFBIG;
+ 		goto out;
+ 	}
+ 
+ 	/* Don't hand 0 to vmalloc, it whines. */
+ 	if (stat.size == 0) {
+ 		ret = -EINVAL;
+ 		goto out;
+ 	}
+ 
+ 	*buf = vmalloc(stat.size);
+ 	if (!*buf) {
+ 		ret = -ENOMEM;
+ 		goto out;
+ 	}
+ 
+ 	pos = 0;
+ 	while (pos < stat.size) {
+ 		bytes = kernel_read(f.file, pos, (char *)(*buf) + pos,
+ 				    stat.size - pos);
+ 		if (bytes < 0) {
+ 			vfree(*buf);
+ 			ret = bytes;
+ 			goto out;
+ 		}
+ 
+ 		if (bytes == 0)
+ 			break;
+ 		pos += bytes;
+ 	}
+ 
+ 	if (pos != stat.size) {
+ 		ret = -EBADF;
+ 		vfree(*buf);
+ 		goto out;
+ 	}
+ 
+ 	*buf_len = pos;
+ out:
+ 	fdput(f);
+ 	return ret;
+ }
