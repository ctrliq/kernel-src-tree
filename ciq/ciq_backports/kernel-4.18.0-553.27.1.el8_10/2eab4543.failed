+ 		ppcpu_rt = per_cpu_ptr(fib6_nh->rt6i_pcpu, cpu);
+ 		pcpu_rt = xchg(ppcpu_rt, NULL);
+ 		if (pcpu_rt) {
+ 			dst_dev_put(&pcpu_rt->dst);
+ 			dst_release(&pcpu_rt->dst);
+ 		}
+ 	}
+ }
