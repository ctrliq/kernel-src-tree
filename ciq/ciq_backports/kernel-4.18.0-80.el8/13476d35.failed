+ {
+ 	struct ipoib_dev_priv *priv = ipoib_priv(ndev);
+ 	int rc;
+ 
+ 	if (priv->parent) {
+ 		ipoib_child_init(ndev);
+ 	} else {
+ 		rc = ipoib_parent_init(ndev);
