+ static void *
+ fwnode_devcon_match(struct fwnode_handle *fwnode, const char *con_id,
+ 		    void *data, devcon_match_fn_t match)
+ {
+ 	struct fwnode_handle *node;
+ 	void *ret;
+ 	int i;
+ 
+ 	for (i = 0; ; i++) {
+ 		node = fwnode_find_reference(fwnode, con_id, i);
+ 		if (IS_ERR(node))
