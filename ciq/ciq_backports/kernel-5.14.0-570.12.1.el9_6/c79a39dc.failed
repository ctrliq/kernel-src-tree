+ 	val |= res;
+ 
+ 	spin_lock_irqsave(&bp->lock, flags);
+ 	iowrite32(val, &bp->tod->adj_sec);
+ 	spin_unlock_irqrestore(&bp->lock, flags);
+ 
+ 	return count;
+ }
