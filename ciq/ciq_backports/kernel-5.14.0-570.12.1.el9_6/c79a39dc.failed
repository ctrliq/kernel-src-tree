+ 	struct dev_ext_attribute dev_attr_##_group##_val##_##_name =	\
+ 		{ __ATTR_RO(_name), (void *)_val }
+ #define EXT_ATTR_RW(_group, _name, _val)				\
+ 	struct dev_ext_attribute dev_attr_##_group##_val##_##_name =	\
