+ static ssize_t
+ tod_correction_store(struct device *dev, struct device_attribute *attr,
+ 		     const char *buf, size_t count)
+ {
+ 	struct ptp_ocp *bp = dev_get_drvdata(dev);
+ 	unsigned long flags;
+ 	int err, res;
+ 	u32 val = 0;
+ 
+ 	err = kstrtos32(buf, 0, &res);
+ 	if (err)
+ 		return err;
+ 	if (res < 0) {
+ 		res *= -1;
+ 		val |= BIT(31);
