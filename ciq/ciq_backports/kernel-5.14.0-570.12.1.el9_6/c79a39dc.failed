+ static int
+ ptp_ocp_register_mem(struct ptp_ocp *bp, struct ocp_resource *r)
+ {
+ 	void __iomem *mem;
+ 
+ 	mem = ptp_ocp_get_mem(bp, r);
+ 	if (IS_ERR(mem))
+ 		return PTR_ERR(mem);
+ 
+ 	bp_assign_entry(bp, r, mem);
+ 
+ 	return 0;
+ }
