+ static const struct ocp_sma_op ocp_art_sma_op = {
+ 	.tbl		= { ptp_ocp_art_sma_in, ptp_ocp_art_sma_out },
+ 	.init		= ptp_ocp_art_sma_init,
+ 	.get		= ptp_ocp_art_sma_get,
+ 	.set_inputs	= ptp_ocp_art_sma_set,
+ 	.set_output	= ptp_ocp_art_sma_set,
+ };
