+ 		.shampo.len	= new_entries,
+ 	};
+ 
+ 	shampo->pi = (shampo->pi + new_entries) & (shampo->hd_per_wq - 1);
+ 	shampo->last_page = page;
+ 	shampo->last_addr = addr;
