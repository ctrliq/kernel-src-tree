+ skip_on_veth()
+ {
+ 	local kind=$(ip -j -d link show dev ${NETIFS[p1]} |
+ 		jq -r '.[].linkinfo.info_kind')
+ 
+ 	if [[ $kind == veth ]]; then
+ 		echo "SKIP: Test cannot be run with veth pairs"
+ 		exit $ksft_skip
+ 	fi
+ }
