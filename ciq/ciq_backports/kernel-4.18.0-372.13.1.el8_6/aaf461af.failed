 +/**
 + * ice_calc_all_vfs_min_tx_rate - calculate cumulative min Tx rate on all VFs
 + * @pf: PF associated with VFs
 + */
 +static int ice_calc_all_vfs_min_tx_rate(struct ice_pf *pf)
 +{
 +	int rate = 0, i;
 +
 +	ice_for_each_vf(pf, i)
 +		rate += pf->vf[i].min_tx_rate;
 +
 +	return rate;
 +}
