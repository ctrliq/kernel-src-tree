+ 		rc = connect_dfs_target(mnt_ctx, full_path, mnt_ctx->leaf_fullpath + 1, tit);
+ 		if (!rc) {
+ 			rc = is_path_remote(mnt_ctx);
+ 			break;
+ 		}
+ 	}
+ 
+ out:
+ 	kfree(full_path);
+ 	dfs_cache_free_tgts(&tl);
+ 	return rc;
