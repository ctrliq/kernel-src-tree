+ /*
+  * 32 bit KVM's emulated SMM layout. Based on Intel P6 layout
+  * (https://www.sandpile.org/x86/smm.htm).
+  */
+ 
+ struct kvm_smm_seg_state_32 {
+ 	u32 flags;
+ 	u32 limit;
+ 	u32 base;
+ } __packed;
+ 
+ struct kvm_smram_state_32 {
+ 	u32 reserved1[62];
+ 	u32 smbase;
+ 	u32 smm_revision;
+ 	u16 io_inst_restart;
