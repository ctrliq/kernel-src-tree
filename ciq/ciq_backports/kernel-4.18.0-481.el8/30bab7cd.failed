+ 		linecard->type = NULL;
+ 		devlink_linecard_notify(linecard, DEVLINK_CMD_LINECARD_NEW);
+ 		mutex_unlock(&linecard->state_lock);
+ 	}
+ 	return err;
+ 
+ out:
+ 	mutex_unlock(&linecard->state_lock);
+ 	return err;
+ }
