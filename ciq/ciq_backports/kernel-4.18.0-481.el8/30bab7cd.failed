+ static int devlink_nl_cmd_linecard_get_dumpit(struct sk_buff *msg,
+ 					      struct netlink_callback *cb)
+ {
+ 	struct devlink_linecard *linecard;
+ 	struct devlink *devlink;
+ 	int start = cb->args[0];
+ 	unsigned long index;
+ 	int idx = 0;
+ 	int err;
